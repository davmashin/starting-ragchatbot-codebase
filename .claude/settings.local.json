{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "mcp_playwright_browser_navigate",
      "mcp_playwright_browser_take_screenshot",
      "Bash(mkdir:*)",
      "Bash(python -m pytest --version)",
      "Bash(uv run:*)",
      "Bash(uv add:*)",
      "Bash(python -m pytest tests/test_ai_generator.py -v)",
      "Bash(python3 -m pytest tests/test_ai_generator.py -v)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "say 'All done'"
          }
        ]
      }
    ]
  }
}